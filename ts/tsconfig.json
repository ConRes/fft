{
  "extends": "@smotaal.io/tools/typescript/jsconfig.base.json",
  "compilerOptions": {
    "module": "ES2015",
    "target": "esnext",
    "rootDir": "./src",
    "outDir": "./dist",
    "noEmit": false,
    "allowJs": false,
    "declaration": true,
    "removeComments": true
  },
  "include": ["./src/*.ts"],
  "exclude": [
    "node_modules",
    "**/node_modules/*",
    "trash",
    "**/trash/*",
    "[[]trash[]]",
    "**/[[]trash[]]/*",
    "[[]more[]]",
    "**/[[]more[]]/*",
    "[trash]",
    "**/[trash]/*",
    "[more]",
    "**/[more]/*",
    "@*"
  ]
}
